{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Miktos Kosmos",
  "version": "0.1.0",
  "identifier": "com.miktoskosmos.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Miktos Kosmos",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Angel Torrella",
    "copyright": "Copyright Â© 2025 Angel Torrella",
    "category": "Utility",
    "shortDescription": "Privacy-first family photo organizer",
    "longDescription": "Transform your digital chaos into a beautifully organized family archive. Privacy-first, blazing fast, and safe by default."
  },
  "plugins": {}
}
